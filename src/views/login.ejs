<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body>

    <%- include('partials/header') %>

    <main class="login">
        <div class="login__box">
        
            <div class="login__box__encabezado">
    
                <a href="/" class="rotate-scale-up-ver"><img src="/images/celstecortado.jpg" alt=""></a>
                <h4 class="animate__animated animate__flash">LOGGING</h4>
            
            </div>
            
            <form action="" method="POST" class="login__box__cuerpo" id="formLogin">
                
                <div class="login__box__cuerpo__contenido">
                    <label for="email">Email</label>
                    <input id="email" placeholder="Escriba su email" type="email" name="email" class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>" value="<%= locals.old && (old.email && old.email) %>">
                    <small class="text-danger ms-2" id="msgError-email">
                        <%= locals.errors && (errors.email && errors.email.msg) %>
                    </small>   
                </div>
    
                <div class="register__box__cuerpo__contenido">
                    <label for="password" class="labels-forms">Contraseña</label>

                    <div class="input-group mb-3">
                        <input type="password" class="form-control input-group-text <%= locals.errors && (errors.password && 'is-invalid') %>" id="password" placeholder="Tu Contraseña" name="password">
                        <span class="input-group-text"><i id="button-eye" class="fa fa-eye"></i></span>
                    </div>

                    <small class="text-danger ms-2" id="msgError-password">
                        <%= locals.errors && (errors.password && errors.password.msg) %>
                    </small> 
                </div>
    
                <div class="login__box__cuerpo__contenido__recordarme">
                    <label for="remember">Recordarme</label>           
                    <input type="checkbox" value="" id="remember" name="remember"> 
                </div>

                <div class="register__box__cuerpo__contenido uno">
                    
                    <small class="text-danger ms-2" id="msgError-empty">
                        
                    </small>  
                    
                </div>
                
                <div class="login__box__cuerpo__bottom">
                    <button type="submit" class="buttom-forms">Enviar</button>
                </div>
    
            </form>
    
        </div>
    
    </main>
    <%- include('partials/footer') %>
    <script src="/js/login.js"></script>
</body>

</html>